<Page x:Class="QuestHubClient.Views.NewPostView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:QuestHubClient.Views"
      xmlns:conv="clr-namespace:QuestHubClient.Converters"
      xmlns:viewmodels="clr-namespace:QuestHubClient.ViewModels"
      d:DataContext="{d:DesignInstance Type=viewmodels:NewPostViewModel}"
      mc:Ignorable="d"
      Title="NewPostView">


    <Page.Resources>
        <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <conv:CategoryToBrushConverter x:Key="CategoryToBrushConverter" />
    </Page.Resources>


    <StackPanel Grid.Column="1"
                Margin="10">
        <StackPanel Margin="10">
            <!-- Encabezado -->
            <StackPanel Margin="0,0,0,40">
                <TextBlock Text="Nueva publicación"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,0,0,10" />
                <TextBlock Text="Publica tus dudas para que sean resueltas por la comunidad :)"
                           FontSize="14"
                           Foreground="Gray" />
            </StackPanel>
            <!--categorias seleccionadas-->
            <ItemsControl ItemsSource="{Binding SelectedCategories}"
                          Margin="2">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding Name}"
                                Command="{Binding DataContext.ToggleCategoryCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                CommandParameter="{Binding}"
                                Margin="5"
                                Padding="4"
                                Background="{Binding IsSelected, Converter={StaticResource CategoryToBrushConverter}}"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                FontSize="12"
                                Cursor="Hand"
                                Height="24"
                                MinWidth="90"
                                Style="{StaticResource SecondaryButtonStyle}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!--Categorias general -->
            <ItemsControl ItemsSource="{Binding Categories}"
                          Margin="2">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding Name}"
                                Command="{Binding DataContext.ToggleCategoryCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                CommandParameter="{Binding}"
                                Margin="5"
                                Background="{Binding IsSelected, Converter={StaticResource CategoryToBrushConverter}}"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                FontSize="12"
                                Cursor="Hand"
                                Padding="25,12"
                                Height="24"
                                MinWidth="90"
                                Style="{StaticResource SecondaryButtonStyle}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>


            <!-- Título -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Título *"
                           Style="{StaticResource LabelStyle}" />
                <TextBox Text="{Binding Post.Title, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBoxStyle}"
                         Height="45" />
            </StackPanel>

            <!-- Contenido -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Contenido *"
                           Style="{StaticResource LabelStyle}" />
                <TextBox Text="{Binding Post.Content, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBoxStyle}"
                         Height="80" />
            </StackPanel>




            <!-- Mensaje de error -->
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       FontSize="12"
                       TextWrapping="Wrap"
                       Margin="5,10,0,0"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}" />

            <!-- Botones -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0"
                        Width="237">
                <Button Command="{Binding CancelCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Content="Cancelar"
                        FontSize="16"
                        Margin="20,0,0,0"
                        Width="100"
                        Height="40" />

                <Button Content="Subir"
                        Command="{Binding SubmitCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        FontSize="14"
                        Height="40"
                        Width="100"
                        Margin="15,0,0,0"
                        Padding="25,12"
                        Cursor="" />
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Page>
