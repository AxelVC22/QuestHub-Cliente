<Window x:Class="QuestHubClient.Views.ImageViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding ImageFile.FileName}"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Imagen -->
        <ScrollViewer Grid.Row="0"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      >
            <Image Source="{Binding ImageFile.FilePath}"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        </ScrollViewer>

        <!-- Información y controles -->
        <Border Grid.Row="1"
                Background="#AA000000"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                           Orientation="Horizontal">
                    <TextBlock Text="{Binding ImageFile.FileName}"
                              Foreground="White"
                              FontWeight="Bold"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0" />
                    <TextBlock Text="{Binding ImageFile.FileSizeFormatted}"
                              Foreground="LightGray"
                              VerticalAlignment="Center" />
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Cerrar"
                        Padding="15,5"
                        Click="Close_Click" />
            </Grid>
        </Border>
    </Grid>
</Window>