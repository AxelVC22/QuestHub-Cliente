<Page x:Class="QuestHubClient.Views.CreateUserView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:QuestHubClient.Views"
      xmlns:conv="clr-namespace:QuestHubClient.Converters"
      xmlns:vm="clr-namespace:QuestHubClient.ViewModels"
      d:DataContext="{d:DesignInstance Type=vm:CreateUserViewModel}"
      mc:Ignorable="d"
      Title="{Binding Title}"
      Background="{StaticResource BackgroundBrush}">


    <Page.Resources>
        <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel izquierdo -->
        <Border Grid.Column="0" 
                Background="{StaticResource PrimaryDarkBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Logo -->
                <StackPanel Grid.Row="0" 
                          Margin="30,60,30,30"
                          HorizontalAlignment="Center">
                    <Ellipse Width="80" Height="80" Margin="0,0,0,20">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Assets/Logo.jpg"
                                        Stretch="UniformToFill" />
                        </Ellipse.Fill>
                        <Ellipse.Effect>
                            <DropShadowEffect BlurRadius="15"
                                              ShadowDepth="3"
                                              Color="#33000000" />
                        </Ellipse.Effect>
                    </Ellipse>
                    <TextBlock Text="QuestHub" 
                             FontSize="32" 
                             FontWeight="Bold" 
                             Foreground="{StaticResource TextPrimaryBrush}"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Panel derecho - Formulario -->
        <ScrollViewer Grid.Column="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="60,40,60,40">

            <StackPanel HorizontalAlignment="Center" 
                        MaxWidth="600"
                        MinWidth="400">

                <!-- Encabezado -->
                <StackPanel Margin="0,20,0,50">
                    <TextBlock Text="Crear Nueva Cuenta" 
                             FontSize="36" 
                             FontWeight="Bold" 
                             Foreground="{StaticResource TextSecondaryBrush}"
                             Margin="0,0,0,15"/>
                    <TextBlock Text="Complete los siguientes campos para crear su cuenta" 
                             FontSize="16" 
                             Foreground="Gray"/>
                </StackPanel>

                <!-- Formulario -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Nombre -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,25">
                        <TextBlock Text="Nombre de Usuario *" 
                                 Style="{StaticResource LabelStyle}"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding User.Name, UpdateSourceTrigger=PropertyChanged}"
                               Style="{StaticResource ModernTextBoxStyle}"
                               Height="50"
                               FontSize="16"
                               Padding="15,12"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,25">
                        <TextBlock Text="Correo Electrónico *" 
                                 Style="{StaticResource LabelStyle}"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding User.Email, UpdateSourceTrigger=PropertyChanged}"
                               Style="{StaticResource ModernTextBoxStyle}"
                               Height="50"
                               FontSize="16"
                               Padding="15,12"/>
                    </StackPanel>

                    <!-- Contraseña -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,25">
                        <TextBlock Text="Contraseña *" 
                                 Style="{StaticResource LabelStyle}"
                                 Margin="0,0,0,8"/>
                        <PasswordBox x:Name="PasswordBox"
                                   Style="{StaticResource ModernPasswordBoxStyle}"
                                   Height="50"
                                   FontSize="16"
                                   Padding="15,12"
                                   PasswordChanged="PasswordBox_PasswordChanged"/>
                    </StackPanel>

                    <!-- Mensaje de error -->
                    <TextBlock Grid.Row="3"
                             Text="{Binding ErrorMessage}" 
                             Foreground="Red"
                             FontSize="14"
                             TextWrapping="Wrap"
                             Margin="0,0,0,20"
                             Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                    <!-- Botones -->
                    <StackPanel Grid.Row="4" 
                              Orientation="Horizontal" 
                              HorizontalAlignment="Right"
                              Margin="0,30,0,0">
                        <Button Command="{Binding CancelCommand}"
                              Style="{StaticResource SecondaryButtonStyle}"
                              Content="Cancelar"
                              FontSize="16"
                              Width="120"
                              Height="50"
                              Margin="0,0,20,0"/>

                        <Button Content="Crear Usuario"
                              Command="{Binding CreateUserCommand}"
                              Style="{StaticResource PrimaryButtonStyle}"
                              FontSize="16"
                              Height="50"
                              Width="150"
                              Padding="20,12"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>