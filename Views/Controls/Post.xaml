<UserControl x:Class="QuestHubClient.Views.Controls.Post"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuestHubClient.Views.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Border Margin="10,4"
            Padding="15"
            Background="White"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="2">
        <StackPanel>


            <Button Content="{Binding Post.Author.Name}"
                    FontSize="12"
                    Foreground="Gray"
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Style="{StaticResource HyperlinkButtonStyle}" />
            <Button Content="{Binding Post.Title}"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#333"
                    Style="{StaticResource HyperlinkButtonStyle}" />





            <TextBlock Text="{Binding Post.Content}"
                       TextWrapping="Wrap"
                       MaxHeight="100"
                       Margin="0,0,0,10" />


            <WrapPanel>
                <ItemsControl ItemsSource="{Binding Post.Categories}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#DDD"
                                    Margin="2"
                                    Padding="4"
                                    CornerRadius="4">
                                <TextBlock Text="{Binding Name}"
                                           FontSize="11" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </WrapPanel>

            <DockPanel>
                <TextBlock Text="{Binding Post.TotalAnswers, StringFormat='Respuestas: {0}'}"
                           FontSize="12"
                           Foreground="DarkSlateGray"
                           DockPanel.Dock="Left" />


            </DockPanel>

        </StackPanel>
    </Border>
</UserControl>
