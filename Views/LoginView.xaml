<Page x:Class="QuestHubClient.Views.LoginView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:QuestHubClient.Views"
      xmlns:conv="clr-namespace:QuestHubClient.Converters"
      xmlns:vm="clr-namespace:QuestHubClient.ViewModels"
      mc:Ignorable="d"
      Title="{Binding Title}"           
      Background="Transparent">
   
    <Page.Resources>
        <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Page.Resources>

    <Border Background="{StaticResource BackgroundBrush}"
        CornerRadius="12"
        BorderBrush="{StaticResource PrimaryLightBrush}"
        BorderThickness="1"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">

        <Border.Effect>
            <DropShadowEffect BlurRadius="20" 
                            ShadowDepth="0" 
                            Color="#33000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryDarkBrush}"
                    CornerRadius="12,12,0,0"
                    Padding="20">
                <StackPanel HorizontalAlignment="Center">
                    <Ellipse Width="80" Height="80" Margin="0,0,0,10">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Assets/Logo.jpg" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                        <Ellipse.Effect>
                            <DropShadowEffect BlurRadius="10"
                          ShadowDepth="2"
                          Color="#33000000"/>
                        </Ellipse.Effect>
                    </Ellipse>


                    <TextBlock Text="QuestHub" 
                             FontSize="28" 
                             FontWeight="Bold" 
                             Foreground="{StaticResource TextPrimaryBrush}"
                             HorizontalAlignment="Center"/>

                    <TextBlock Text="Bienvenido de vuelta" 
                             FontSize="14" 
                             Foreground="{StaticResource PrimaryLightBrush}"
                             HorizontalAlignment="Center"
                             Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Contenido del formulario -->
            <ScrollViewer Grid.Row="1" 
                        VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="40,30">

                    <!-- Campo Usuario -->
                    <TextBlock Text="Correo Electronico *" Style="{StaticResource LabelStyle}"/>

                    <TextBox Text="{Binding User.Email, UpdateSourceTrigger=PropertyChanged}"
                           Style="{StaticResource ModernTextBoxStyle}"
                           TabIndex="1"/>

                    <!-- Campo Contraseña -->
                    <TextBlock Text="Contraseña *" Style="{StaticResource LabelStyle}"/>

                    <PasswordBox x:Name="PasswordBox"
                               Style="{StaticResource ModernPasswordBoxStyle}"
                               TabIndex="2"
                               PasswordChanged="PasswordBox_PasswordChanged"/>

                    <!-- Mensaje de error -->
                    <TextBlock Text="{Binding ErrorMessage}" 
                             Foreground="Red"
                             FontSize="12"
                             TextWrapping="Wrap"
                             Margin="5,10,0,0"
                             Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                    <!-- Botón de login -->
                    <Button Command="{Binding LoginCommand}"
                          Style="{StaticResource PrimaryButtonStyle}"
                          Content="Iniciar Sesión"
                          FontSize="16"
                          Margin="0,20,0,0"
                          Height="45"/>

                    <!-- Enlaces adicionales -->
                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Center"
                              Margin="0,20,0,0">
                        <Button Command="{Binding RegisterCommand}"
                              Content="Registrarse"
                              Background="Transparent"
                              BorderThickness="0"
                              Foreground="{StaticResource AccentBrush}"
                              FontSize="12"
                              Cursor="Hand"
                              Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>