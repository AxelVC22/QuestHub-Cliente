<Page x:Class="QuestHubClient.Views.PostView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:QuestHubClient.Views"
      xmlns:ctrl="clr-namespace:QuestHubClient.Views.Controls"
      xmlns:viewmodels="clr-namespace:QuestHubClient.ViewModels"
      xmlns:conv="clr-namespace:QuestHubClient.Converters"
      d:DataContext="{d:DesignInstance Type=viewmodels:PostViewModel}"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="PostView">

    <Page.Resources>
        <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <ctrl:AnswerCard x:Key="AnswerCard" />
    </Page.Resources>


    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <Grid>




            <StackPanel>

                <ctrl:Post DataContext="{Binding}"
                           SeeUserDetailsCommand="{Binding SeeUserDetailsCommand}"
                           VerticalAlignment="Top" />

                <Border Margin="10,2"
                        BorderThickness="1"
                        BorderBrush="LightGray"
                        CornerRadius="2">
                    <StackPanel Margin="8">
                        <TextBox Height="80"
                                 Margin="4"
                                 VerticalAlignment="Top"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Text="{Binding Answer.Content}" />

                        <!-- Mensaje de error -->
                        <TextBlock Grid.Row="2"
                                   Text="{Binding ErrorMessage}"
                                   Foreground="Red"
                                   FontSize="14"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,20"
                                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}" />

                        <Button Height="24"
                                Width="100"
                                Content="Responder"
                                HorizontalAlignment="Right"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding SendAnswerCommand}" />

                    </StackPanel>


                </Border>

                <Button Content="Respuestas"
                        FontSize="16"
                        Margin="10,2"
                        FontWeight="Bold"
                        Foreground="#333"
                        Style="{StaticResource HyperlinkButtonStyle}"
                        CommandParameter="{Binding }" />
                
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Margin="10,10,0,0">
                    <ItemsControl ItemsSource="{Binding AnswerCards}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ctrl:AnswerCard DataContext="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </ScrollViewer>

            </StackPanel>

            <Button Content="🡫"
                    Height="20"
                    Width="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="20"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding SeeMoreCommand}" />




        </Grid>
    </ScrollViewer>


</Page>
