<Window x:Class="QuestHubClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:QuestHubClient.ViewModels"
        xmlns:local="clr-namespace:QuestHubClient"
        xmlns:conv="clr-namespace:QuestHubClient.Converters"
        Title="{Binding Title}"
        Icon="/Assets/Logo.jpg"
        Height="800"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.DataContext>
        <Binding Source="{x:Static local:App.MainViewModel}" />
    </Window.DataContext>

    <Window.Resources>
        <conv:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter" />
        <conv:InverseStringToVisibilityConverter x:Key="InverseStringToVisibilityConverter" />
        <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <conv:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!-- Estilo para los botones del menú -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="15,12" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Margin" Value="10,2" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Menu lateral -->
        <Border Grid.Column="0"
                Background="{StaticResource PrimaryDarkBrush}"
                BorderBrush="{StaticResource PrimaryLightBrush}"
                BorderThickness="0,0,1,0"
                Visibility="{Binding IsRegistered, Converter={StaticResource BoolToVisibilityConverter}}"
                Width="250">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Logo y título -->
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            Margin="20,25,20,30"
                            HorizontalAlignment="Center">
                    <Ellipse Width="40"
                             Height="40"
                             Margin="0,0,10,0">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Assets/Logo.jpg"
                                        Stretch="UniformToFill" />
                        </Ellipse.Fill>
                        <Ellipse.Effect>
                            <DropShadowEffect BlurRadius="10"
                                              ShadowDepth="2"
                                              Color="#33000000" />
                        </Ellipse.Effect>
                    </Ellipse>
                    <TextBlock Text="QuestHub"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center" />
                </StackPanel>

                <!-- Opciones del menú dinámicas -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding MenuOptions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding Command}"
                                        Style="{StaticResource MenuButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icon}"
                                                   FontSize="16"
                                                   Margin="0,0,10,0"
                                                   VerticalAlignment="Center"
                                                   Visibility="{Binding Icon, Converter={StaticResource StringToVisibilityConverter}}" />
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="14"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Usuario y logout -->
                <StackPanel Grid.Row="2"
                            Margin="20,10,20,25">
                    <Separator Background="{StaticResource PrimaryLightBrush}"
                               Margin="0,0,0,15" />

                    <Button Command="{Binding ShowProfileCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0,8"
                            HorizontalContentAlignment="Left"
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="32"
                                     Height="32"
                                     Margin="0,0,10,0">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Assets/DefaultProfilePicture.png" />
                                </Ellipse.Fill>
                            </Ellipse>

                            <StackPanel>
                                <TextBlock Text="{Binding User.Name}"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}" />
                                <TextBlock Text="Ver perfil"
                                           FontSize="10"
                                           Foreground="{StaticResource PrimaryLightBrush}" />
                            </StackPanel>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding LogoutCommand}"
                            Content="Cerrar Sesión"
                            Background="{StaticResource AccentBrush}"
                            Foreground="{StaticResource TextPrimaryBrush}"
                            BorderThickness="0"
                            Padding="0,8"
                            Style="{StaticResource LogoutButtonStyle}"
                            Margin="0,10,0,0"
                            FontSize="12"
                            Cursor="Hand">
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenido principal -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="White"
                    BorderBrush="{StaticResource PrimaryLightBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="30,20"
                    Visibility="{Binding LoginCheck, Converter={StaticResource BoolToVisibilityConverter}}"
                    Height="80"
                    VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- barra de busqueda y titulo -->
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal">
                        <Button Background="Transparent"
                                BorderBrush="{x:Null}"
                                Command="{Binding GoHomeCommand}">

                            <TextBlock Text="{Binding SelectedSection}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,30,0" />

                        </Button>

                       
                    </StackPanel>

                    <!-- Botones header -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal">
                        <Button Command="{Binding LoginCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Content="Iniciar sesión"
                                FontSize="14"
                                Width="100"
                                Margin="0,0,15,0"
                                Visibility="{Binding IsRegistered, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}"
                                Cursor="" />

                        <Button Command="{Binding SignInCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Visibility="{Binding IsRegistered, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}"
                                Content="Registrarse"
                                FontSize="14"
                                Width="100"
                                Margin="0,0,15,0"
                                Cursor="" />

                        <Button Command="{Binding ShowNotificationsCommand}"
                                Visibility="{Binding IsRegistered, Converter={StaticResource BoolToVisibilityConverter}}"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="20,0,0,0">
                            <Button.Content>
                                <Grid>
                                    <TextBlock Text="🔔"
                                               FontSize="20"
                                               Foreground="{StaticResource TextSecondaryBrush}" />
                                    <Border Background="#E74C3C"
                                            CornerRadius="8"
                                            Width="16"
                                            Height="16"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Margin="0,-5,-5,0"
                                            Visibility="{Binding NotificationCount, Converter={StaticResource ZeroToVisibilityConverter}}">
                                        <TextBlock Text="{Binding NotificationCount}"
                                                   FontSize="9"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" />
                                    </Border>
                                </Grid>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Contenido aca -->
            <Frame x:Name="PageFrame"
                   Grid.Row="1"
                   NavigationUIVisibility="Hidden" />
        </Grid>
    </Grid>
</Window>